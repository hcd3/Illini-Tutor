<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="475dp"
        android:layout_marginBottom="50dp"
        android:divider="@drawable/ic_launcher_background"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/studentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find Your Tutor"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FF4800" />

        <Button
            android:id="@+id/tutorButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I'm a Tutor"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#021BF8"
            android:textColorHighlight="#00FF0000" />

        <Button
            android:id="@+id/infoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info"
            android:textColor="#000000" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>